@model IEnumerable<GeneralStoreMVC.Models.Customer.CustomerIndexModel>

<h1 class="text-center">All Customers</h1>
<a href="/customer/create" class="text-primary">Create a Customer</a>

<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>&nbsp;</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.Id</td>
                <td>@customer.Name</td>
                <td>@customer.Email</td>
                <td><a asp-action="Edit" asp-route-id="@customer.Id" style="color: white">Edit</a> |
                <a asp-action="Details" asp-route-id="@customer.Id" style="color: white">Details</a> |
                <a asp-action="Delete" asp-route-id="@customer.Id" style="color: white">Delete</a></td>
            </tr>
        }
    </tbody>
</table>
